<div class="loaderFrame" ng-hide="dataLoaded">
    <p class="loader"></p>
</div>
<div ng-controller="LecturerController as LecturerCtrl" class="row">
    <h2>Lecturer</h2>
    <div class="col-lg-12">
        <form ng-submit="submit()">
            <div class="form-group">
                <label for="LecturerName">Lecturer Name:</label>
                <input id="LecturerName" type="text" ng-model="lecturer.LecturerName" name="text" class="form-control" />
            </div>
            <div class="form-group">
                <label for="departmentList">Select Department:</label>
                <select class="dropdown form-control" ng-model="selectedDepartment"
                        ng-options="department.Name for department in departments track by department.DepartmentId"></select>

            </div>
            <input type="submit" id="submitSection" value="Submit" class="btn btn-default" />
        </form>
        <br />
    </div>
    <div class="col-lg-12">
        <input class="form-control" type="text" placeholder="Search" ng-model="search" />
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Sr.No
                    </th>
                    <th>
                        Lecturer Name
                    </th>
                    <th>
                        Department Name
                    </th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="lecturer in lecturers | filter:search">
                    <td>{{$index + 1}}</td>
                    <td>{{lecturer.LecturerName}}</td>
                    <td>{{lecturer.DepartmentName}}</td>
                    <td>
                        <a href="#" ng-click="EditLecturer(lecturer.LecturerId)">Edit</a>
                        <a href="#" ng-click="DeleteLecturer(lecturer.LecturerId)">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
