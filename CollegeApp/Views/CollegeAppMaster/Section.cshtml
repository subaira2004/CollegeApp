<div class="loaderFrame" ng-hide="dataLoaded">
    <p class="loader"></p>
</div>
<div ng-controller="SectionController as Section" class="row">
    <h2>Section</h2>

    <div class="col-lg-12">
        <form ng-submit="submitSection()">
            <div class="form-group">
                <label for="SectionName">Enter Section Name:</label>
                <input id="SectionName" type="text" ng-model="section.SectionName" name="text" class="form-control" />
            </div>
            <div class="form-group">
                <label for="departmentList">Select Department:</label>
                <select class="dropdown form-control" ng-model="selectedDepartment"
                        ng-options="department.Name for department in departments track by department.DepartmentId"></select>

            </div>
            <input type="submit" id="submitSection" value="Submit" class="btn btn-default" />
        </form>
        <br />
    </div>
    <div class="col-lg-12">
        <input class="form-control" type="text" placeholder="Search" ng-model="search" />
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Sr.No
                    </th>
                    <th>
                        Section Name
                    </th>
                    <th>
                        Department Name
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="section in sections | filter:search">
                    <td>{{$index + 1}}</td>
                    <td>{{section.SectionName}}</td>
                    <td>{{section.DepartmentName}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


